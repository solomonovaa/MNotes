<?xml version="1.0" encoding="UTF-8"?>

<Shell xmlns="http://xamarin.com/schemas/2014/forms" HeightRequest="100"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:views="clr-namespace:Notes.Views" 
       xmlns:notes="clr-namespace:Notes" x:DataType="notes:AppShell"
       x:Class="Notes.AppShell" x:Name="mainShell" BackgroundColor="#FF8F41">
    <TabBar>
        <ShellContent Title="All"
                      Icon="mainIcon.png"
                      ContentTemplate="{DataTemplate views:PageWithAllNotes}" />
        <ShellContent Title="Favorite"
                      Icon="favoriteIcon.png"
                      ContentTemplate="{DataTemplate views:PageWithFavoriteNotes}" />
    </TabBar>
</Shell>
